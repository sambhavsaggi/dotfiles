#All aliases for bash
alias ls="ls -a --color=tty"
alias nano="nano -miScl"
alias cp="cp -v"
alias clearr="clear; clear"
alias cclear="clear; clear; cd ~"
alias hclear="history -c; echo > ~/.bash_history; cd"
alias ifconfig="ip -s -c -h a"
alias ts="ts '[%Y-%m-%d %H:%M:%S]'"
alias cls="clear; ls"
alias emacs="emacs -nw"
alias top="htop"
alias sl="ls"
alias bu="xdotool key XF86MonBrightnessUp"
alias bd="xdotool key XF86MonBrightnessDown"
#alias battery="upower -i `upower -e | grep BAT0` | grep --color=none percentage"
alias duckduckgo="lynx https://duckduckgo.com/lite"
alias java8="/usr/lib/jvm/java-8-openjdk/jre/bin/java"
alias clear="clear -x"
alias starthotspot="sudo create_ap --config /root/.wh.config"
alias ip="ip -c"
alias qmake="qmake-qt5"
alias vim="nvim"
alias please="sudo"
eval $(thefuck --alias)
